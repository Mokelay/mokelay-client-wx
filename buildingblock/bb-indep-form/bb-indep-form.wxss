.bb_indep_form .form_item{
  height: 130rpx;
  widows: 100%;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border: 1px solid #f5f5f5;
  line-height: 88rpx;
  display: flex;
  align-items: center;
}
.bb_indep_form .form_item .section__title{
  display: inline-block;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #000000;
  letter-spacing: 0;
  min-width: 92rpx;
}
.bb_indep_form .form_item .section__editor{
  display: inline-block;
  flex: 1;
}
