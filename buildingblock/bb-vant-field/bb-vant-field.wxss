/* buildingblock/bb-vant-field/bb-vant-field.wxss */
@import "../../lib/iconfont/iconfont.wxss";

.bb-vant-cell{
  border:1rpx solid rgb(229, 229, 229);
  border-left:none;
  border-right:none;
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  background-color: #fff;
}
.bb-vant-cell .cell-title{
  min-width: 92rpx;
}
.bb-vant-cell .cell-value{
  flex: 1;
  text-align: left;
  padding: 0 50rpx;
}
.bb-vant-cell .isLink{
  display: inline-block;
  width: 30rpx;
  margin-top: 8rpx;
}