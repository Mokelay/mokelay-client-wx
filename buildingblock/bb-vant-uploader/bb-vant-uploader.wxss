/* buildingblock/bb-vant-uploader/bb-vant-uploader.wxss */

@import "../../lib/iconfont/iconfont.wxss";

.bb-vant-uploader .edit{
  position: absolute;
  bottom: 0.1rem;
  right: 0.5rem;
  font-size: 0.3rem;
  text-align: center;
  line-height: 0.5rem;
  background: #999;
  color: #fff;
  border-radius: .10666rem;
  padding: 0.1rem .1rem .1rem .18rem;
  letter-spacing: 0.08rem
}

.bb-vant-uploader{
    margin:0.5rem;
    width: auto;
    display: inline-block;
    position: relative;
}
 
.bb-vant-uploader  .record .recordStart{
    font-size: 2rem;
    color: #ed2b2c;
    display: inline-block;
    float: left;
}
.bb-vant-uploader  .record .recordRight{
    padding-top:0.5rem;
    font-size:0.4rem;
    color:#8c8c8c;
}
.bb-vant-uploader  .record .recordRight  .time{
    color:#ed2b2c;
}
.bb-vant-uploader  .dsn{
    display:none !important;
}
.bb-vant-uploader  .bb-vant-uploader-single{
    width:100% !important;
    margin:0.5rem auto !important;
}

.bb-vant-uploader .card{
    width: 4rem;
    height: 4rem;
    text-align: center;
    line-height: 4rem;
    background: rgba(142, 140, 140, 0.2);
    color: #999999;
    display: inline-block;
    margin-bottom: 0.1rem;
    float: left;
    margin-right: 0.1rem;
}      
.bb-vant-uploader .card .iconfont{
  font-size: 24px;
}

.bb-vant-uploader .uploaded-item{
    display: inline-block;
    position: relative;
    margin-right: 0.2rem;
    width: 4rem;
    height: 4rem;
    overflow: hidden;
}
.bb-vant-uploader .uploaded-item:hover .iconfont{
    opacity:1;
    transition: opacity .5s;
}
.bb-vant-uploader .uploaded-item .iconfont{
   color: #999;
  position: absolute;
  top: 0;
  right: 0;
  font-size: 1rem;
  opacity:1;
  line-height:100%;
}
.bb-vant-uploader .uploaded-item .uploaded-child{
    width: 4rem;
    text-align: center;
    line-height: 4rem;
    height: 100%;
}
.bb-vant-uploader .uploaded-item-lg{
    display: inline-block;
    position: relative;
    margin-right: 0.1rem;
    width: 100%;
    height: 4rem;
    overflow: hidden;
}
.bb-vant-uploader .uploaded-item-lg:hover .iconfont{
    opacity:1;
    transition: opacity .5s;
}
.bb-vant-uploader .uploaded-item-lg .iconfont{
    color: #999;
    position: absolute;
    top: 0;
    right: 0;
    font-size: 1rem;
    opacity:1;
}
.bb-vant-uploader .uploaded-item-lg .uploaded-child{
  width: 100%;
  text-align: center;
  line-height: 4rem;
}
.bb-vant-uploader .video{
    font-size: 1rem;
    color: #7c808f;
    line-height: 1rem;
    margin-bottom: 1.76rem;
    margin-left: .3rem;
    display: inline-block;
}